<Frame>
    <Component Name="PadPanel">
        <BoxSizer orient="VERTICAL" Border="LEFT, 10"
                  Proportion="1" Expand="True" />
    </Component>

    <Notebook>
        <PadPanel Name="First">
            <StaticText label="First" />
        </PadPanel>
        <PadPanel Name="Second">
            <StaticText label="Second" />
        </PadPanel>        

        <Config>
            <AddPage page="{First}" text="First" />
            <AddPage page="{Second}" text="Second" />
        </Config>
    </Notebook>
</Frame>